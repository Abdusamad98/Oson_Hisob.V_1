                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="60"
                            android:textSize="24dp"
                            android:text="0"
